<div class="overflow-hidden shadow-sm rounded-xl border border-gray-100 bg-white">
  <table class="min-w-full divide-y divide-gray-100">
    <thead class="bg-gray-50/80">
      <tr>
        <th class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-widest text-nowrap">角色名称</th>
        <th class="px-6 py-4 text-left text-xs font-bold text-gray-400 uppercase tracking-widest text-nowrap">描述</th>
        <th class="px-6 py-4 text-right text-xs font-bold text-gray-400 uppercase tracking-widest text-nowrap">创建时间</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-50 text-sm">
      <% @roles.each do |role| %>
        <tr class="hover:bg-gray-50 transition-colors">
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="flex items-center gap-2">
              <div class="w-2 h-2 rounded-full bg-indigo-500 shadow-sm shadow-indigo-200"></div>
              <span class="font-bold text-gray-700 font-medium"><%= role.name %></span>
            </div>
          </td>
          <td class="px-6 py-4 text-gray-500 italic text-xs">
            <%= role.description.presence || "暂无描述" %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-gray-400 font-mono text-xs">
            <%= role.created_at.strftime("%Y-%m-%d") %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
