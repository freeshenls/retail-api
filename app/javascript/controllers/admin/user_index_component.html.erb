<%# app/components/admin/user_component.html.erb %>
<div class="w-full space-y-4">
  <div class="bg-white border border-slate-200 rounded-xl shadow-sm overflow-hidden">
    <%# 表格顶栏 %>
    <div class="bg-slate-50/50 px-6 py-4 border-b border-slate-200 flex justify-between items-center">
      <div class="flex items-center gap-2">
        <span class="w-1.5 h-4 bg-[#0066b3] rounded-full"></span>
        <h3 class="text-xs font-bold text-slate-500 uppercase tracking-wider">系统注册用户列表</h3>
      </div>
      
      <%# 改为 link_to 跳转到 new 页面 %>
      <%= link_to new_admin_user_path, 
                  data: { turbo: false }, 
                  class: "flex items-center gap-2 px-4 py-1.5 bg-[#0066b3] text-white text-[11px] font-bold rounded-lg hover:bg-[#005596] transition-all shadow-sm active:scale-95" do %>
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
        新增用户
      <% end %>
    </div>

    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-slate-200">
        <thead class="bg-slate-50/50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">用户信息</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">角色权限</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">注册时间</th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-bold text-slate-500 uppercase tracking-wider">操作</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-200 bg-white text-slate-700">
          <% @users.each do |user| %>
            <tr class="hover:bg-slate-50/50 transition-colors group">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="w-1 h-4 bg-[#0066b3] rounded-full mr-3 opacity-0 group-hover:opacity-100 transition-opacity"></div>
                  
                  <div class="h-9 w-9 rounded-full bg-slate-100 border border-slate-200 flex items-center justify-center overflow-hidden shrink-0 mr-3 shadow-inner">
                    <% if user.avatar.attached? %>
                      <%= image_tag user.avatar, class: "w-full h-full object-cover" %>
                    <% else %>
                      <span class="text-xs font-bold text-slate-400"><%= user.name[0].upcase %></span>
                    <% end %>
                  </div>

                  <div class="flex flex-col">
                    <span class="text-slate-900 font-bold text-sm tracking-tight"><%= user.name %></span>
                    <span class="text-xs text-slate-400 font-mono"><%= user.email %></span>
                  </div>
                </div>
              </td>

              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-[10px] font-bold 
                               <%= user.admin? ? 'bg-orange-50 text-orange-600 border border-orange-100' : 'bg-blue-50 text-[#0066b3] border border-blue-100' %> uppercase">
                    <%= user.role&.description || "未分配" %>
                  </span>
                </div>
              </td>

              <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500 font-mono">
                <%= user.created_at.strftime("%Y-%m-%d %H:%M") %>
              </td>

              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex items-center justify-end gap-x-4">
                  <%= link_to "编辑", edit_admin_user_path(user), 
                            data: { turbo: false },
                            class: "text-[#0066b3] hover:text-[#005596] font-bold transition-colors" %>

                  <% if user != helpers.current_user %>
                    <div class="relative group/popover">
                      <span class="text-red-400 group-hover/popover:text-red-600 font-bold cursor-help transition-colors">
                        注销
                      </span>

                      <div class="invisible opacity-0 group-hover/popover:visible group-hover/popover:opacity-100 
                                  absolute bottom-full right-0 mb-3 z-[60] transition-all duration-200 
                                  translate-y-1 group-hover/popover:translate-y-0">
                        <div class="bg-white border border-slate-200 shadow-xl rounded-lg p-2 flex items-center gap-1.5 whitespace-nowrap">
                          <%= button_to "/admin/users/#{user.id}", 
                                        method: :delete,
                                        data: { turbo_frame: "main_content" },
                                        class: "flex items-center gap-2 px-4 py-1.5 bg-red-500 text-white text-[11px] font-bold rounded shadow-sm hover:bg-red-600 cursor-pointer border-none transition-all" do %>
                            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                            确认注销
                          <% end %>
                          <div class="absolute top-[calc(100%-5px)] right-4 w-2.5 h-2.5 bg-white border-r border-b border-slate-200 rotate-45"></div>
                        </div>
                      </div>
                    </div>
                  <% else %>
                    <span class="text-slate-300 font-bold cursor-not-allowed">本人</span>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= render Common::PagyComponent.new(pagy: @pagy) %>

    <% if @users.empty? %>
      <div class="px-6 py-16 text-center text-slate-400 italic text-sm">
        当前暂无用户数据
      </div>
    <% end %>
  </div>
</div>
