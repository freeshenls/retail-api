<%# app/components/staff/order_rejected_component.html.erb %>
<div data-controller="staff--order-rejected-component" class="w-full space-y-4">
  
  <%# 数据表格区域 %>
  <div class="bg-white border-2 border-slate-200 rounded-2xl shadow-sm overflow-hidden text-slate-700">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-slate-100">
        <thead class="bg-slate-50/50">
          <tr>
            <th scope="col" class="px-6 py-4 text-left text-[10px] font-black text-slate-400 uppercase tracking-widest">订单编号</th>
            <th scope="col" class="px-6 py-4 text-left text-[10px] font-black text-slate-400 uppercase tracking-widest">产品规格</th>
            <th scope="col" class="px-6 py-4 text-left text-[10px] font-black text-slate-400 uppercase tracking-widest">结算金额</th>
            <th scope="col" class="px-6 py-4 text-left text-[10px] font-black text-slate-400 uppercase tracking-widest">状态</th>
            <th scope="col" class="px-6 py-4 text-right text-[10px] font-black text-slate-400 uppercase tracking-widest">操作</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-100 bg-white">
          <% @orders.each do |order| %>
            <tr class="hover:bg-slate-50/50 transition-colors group">
              <%# 1. 订单编号 %>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="w-1 h-4 bg-red-500 rounded-full mr-2 opacity-0 group-hover:opacity-100 transition-opacity"></div>
                  <span class="font-mono font-bold text-slate-900 tracking-tight"><%= order.order_no %></span>
                </div>
              </td>

              <%# 2. 产品规格 %>
              <td class="px-6 py-4">
                <div class="text-sm font-black text-slate-800"><%= order.category_name %></div>
                <div class="text-[10px] text-slate-400 font-bold uppercase tracking-tighter"><%= order.service_type %></div>
              </td>

              <%# 3. 结算金额 %>
              <td class="px-6 py-4 whitespace-nowrap font-mono font-black text-slate-900">
                ¥ <%= number_with_precision(order.amount, precision: 2) %>
              </td>

              <%# 4. 状态：已驳回 %>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2.5 py-1 bg-red-50 text-red-600 border border-red-100 text-[10px] font-black rounded-lg uppercase tracking-wider">
                  审核驳回
                </span>
              </td>

              <%# 5. 操作 %>
              <td class="px-6 py-4 whitespace-nowrap text-right">
                <%= link_to staff_order_path(order), 
                            data: { turbo: false }, 
                            class: "text-[#0066b3] hover:text-[#005596] font-black text-sm transition-colors" do %>
                  查看
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%# Pagy 分页：复刻 Navbar 同款橙色装饰条样式 %>
    <% if render_pagy? %>
      <div class="px-6 py-4 bg-slate-50 border-t border-slate-100 flex items-center justify-between">
        <div class="text-[10px] font-black text-slate-400 uppercase tracking-tighter">
          <%== @pagy.info_tag %>
        </div>
        
        <div class="flex items-center
                    [&_nav]:inline-flex [&_nav]:rounded-xl [&_nav]:shadow-sm [&_nav]:overflow-hidden [&_nav]:border [&_nav]:border-slate-200
                    [&_a]:px-4 [&_a]:py-2 [&_a]:text-xs [&_a]:font-black [&_a]:text-slate-500 [&_a]:bg-white [&_a]:no-underline
                    [&_a:hover]:bg-[#0066b3] [&_a:hover]:text-white
                    
                    [&_.current]:px-4 [&_.current]:py-2 [&_.current]:text-xs [&_.current]:font-black [&_.current]:bg-[#0066b3] [&_.current]:text-white [&_.current]:relative
                    [&_.current]:after:content-[''] [&_.current]:after:absolute [&_.current]:after:bottom-0 [&_.current]:after:left-0 [&_.current]:after:w-full [&_.current]:after:h-[3px] [&_.current]:after:bg-orange-400
                    
                    [&_.disabled]:px-4 [&_.disabled]:py-2 [&_.disabled]:text-slate-300 [&_.disabled]:bg-slate-50
                    [&_.gap]:px-4 [&_.gap]:py-2 [&_.gap]:text-slate-400">
          <%== @pagy.series_nav %>
        </div>
      </div>
    <% end %>

    <% if @orders.empty? %>
      <div class="px-6 py-16 text-center text-[11px] font-bold text-slate-300 uppercase tracking-widest italic">
        暂无被驳回的订单记录
      </div>
    <% end %>
  </div>
</div>
