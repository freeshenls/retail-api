<%# app/javascript/controllers/staff/order_ready_component.html.erb %>
<div data-controller="staff--order-ready-component" class="w-full space-y-4">
  <div class="bg-white border border-slate-200 rounded-xl shadow-sm overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-slate-200">
        <thead class="bg-slate-50/50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">订单编号</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">业务详情</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">客户</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">预估金额</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">当前状态</th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-bold text-slate-500 uppercase tracking-wider">操作</th>
          </tr>
        </thead>
        
        <tbody class="divide-y divide-slate-200 bg-white text-slate-700">
          <% @orders.each do |order| %>
            <tr class="hover:bg-slate-50/50 transition-colors group">
              <%# 1. 订单编号 %>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <div class="flex items-center">
                  <div class="w-1 h-4 bg-[#0066b3] rounded-full mr-2 opacity-0 group-hover:opacity-100 transition-opacity"></div>
                  <span class="text-slate-900 font-mono font-bold tracking-tight"><%= order.order_no %></span>
                </div>
              </td>

              <%# 2. 业务详情 %>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-black text-slate-700"><%= order.category_name %></div>
                <div class="mt-1 flex items-center gap-2">
                  <span class="inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-bold bg-slate-100 text-slate-500 border border-slate-200 uppercase"><%= order.service_type %></span>
                  <span class="text-[10px] font-bold text-slate-400 italic">x <%= order.quantity.to_i %></span>
                </div>
              </td>

              <%# 3. 客户信息 %>
              <td class="px-6 py-4 whitespace-nowrap text-xs font-bold text-slate-500 uppercase italic">
                <%= order.customer_name %>
              </td>

              <%# 4. 金额 %>
              <td class="px-6 py-4 whitespace-nowrap text-[13px] font-black text-[#0066b3] font-mono italic">
                ¥ <%= number_with_precision(order.amount, precision: 2) %>
              </td>

              <%# 5. 状态标签 %>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2 py-0.5 rounded text-[10px] font-bold bg-amber-50 text-amber-600 border border-amber-100 uppercase">
                  等待接单
                </span>
              </td>

              <%# 6. 操作链接：包含详情和气泡抢单 %>
              <td class="px-6 py-4 whitespace-nowrap text-right">
                <div class="flex justify-end items-center gap-3">
                  <%= link_to "详情", staff_order_path(order), 
                            data: { turbo: false },
                            class: "text-[#0066b3] hover:text-[#005596] text-xs font-bold transition-colors" %>
                  
                  <%# 立即抢单气泡交互容器 %>
                  <div class="relative group/popover">
                    <button type="button" 
                        class="px-3 py-1 text-[#0066b3] bg-[#0066b3]/5 group-hover/popover:bg-[#0066b3]/10 text-[11px] font-black rounded transition-all cursor-pointer border-none">
                      立即接单
                    </button>

                    <%# Popover 气泡层 %>
                    <div class="invisible opacity-0 group-hover/popover:visible group-hover/popover:opacity-100 absolute bottom-full right-0 mb-2 z-50 transition-all duration-200 translate-y-1 group-hover/popover:translate-y-0">
                      <div class="bg-white border border-slate-200 shadow-xl rounded-lg p-1 flex items-center gap-1.5 whitespace-nowrap">
                        <%= button_to accept_staff_order_path(order), method: :patch, 
                                      data: { turbo: false }, 
                                      class: "flex items-center gap-1.5 px-4 py-1.5 bg-[#0066b3] text-white text-[11px] font-black rounded hover:bg-[#005596] cursor-pointer border-none transition-all" do %>
                          <%= heroicon "bolt", variant: :mini, options: { class: "h-3.5 w-3.5" } %>
                          确认抢单
                        <% end %>
                        <div class="absolute top-[calc(100%-5px)] right-6 w-2.5 h-2.5 bg-white border-r border-b border-slate-200 rotate-45"></div>
                      </div>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= render Common::PagyComponent.new(pagy: @pagy) %>

    <% if @orders.empty? %>
      <div class="px-6 py-20 text-center">
        <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-slate-50 text-slate-300 mb-4">
          <%= heroicon "inbox", variant: :outline, options: { class: "w-6 h-6" } %>
        </div>
        <p class="text-slate-400 italic text-sm font-medium">当前暂无待抢订单，新订单进入时将响起提示音</p>
      </div>
    <% end %>
  </div>
</div>
