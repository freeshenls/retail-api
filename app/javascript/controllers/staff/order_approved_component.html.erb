<%# app/components/staff/order_approved_component.html.erb %>
<div data-controller="staff--order-approved-component" class="w-full space-y-4">
  
  <%# 数据表格区域 %>
  <div class="bg-white border border-slate-200 rounded-xl shadow-sm overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-slate-200">
        <thead class="bg-slate-50/50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-black text-slate-500 uppercase tracking-wider">订单编号</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-black text-slate-500 uppercase tracking-wider">规格/类型</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-black text-slate-500 uppercase tracking-wider">客户</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-black text-slate-500 uppercase tracking-wider">状态</th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-black text-slate-500 uppercase tracking-wider">操作</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-200 bg-white text-slate-700">
          <% @orders.each do |order| %>
            <tr class="hover:bg-slate-50/50 transition-colors group">
              <%# 1. 订单编号 %>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <div class="flex items-center">
                  <div class="w-1 h-4 bg-[#0066b3] rounded-full mr-2 opacity-0 group-hover:opacity-100 transition-opacity"></div>
                  <span class="text-slate-900 font-mono font-bold tracking-tight">
                    <%= order.order_no %>
                  </span>
                </div>
              </td>

              <%# 2. 规格/类型 %>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-black text-slate-700"><%= order.category_name %></div>
                <div class="mt-1 flex items-center gap-2">
                  <span class="inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-bold bg-slate-100 text-slate-500 border border-slate-200 uppercase">
                    <%= order.service_type %>
                  </span>
                  <span class="text-[10px] font-bold text-slate-400">× <%= order.quantity.to_i %></span>
                </div>
              </td>

              <%# 3. 客户 %>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="text-xs font-bold text-slate-500 uppercase tracking-tighter">
                  <%= order.customer_name %>
                </span>
              </td>

              <%# 4. 状态：已审核通过 %>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2 py-0.5 rounded text-[10px] font-black bg-emerald-50 text-emerald-700 border border-emerald-200">
                  审核通过
                </span>
              </td>

              <%# 5. 操作 %>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to "详情", staff_order_path(order), 
                            data: { turbo: false },
                            class: "text-[#0066b3] hover:text-[#005596] font-black transition-colors" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%# Pagy 分页底栏 - 复刻 Navbar 同款橙色装饰条样式 %>
    <% if render_pagy? %>
      <div class="px-6 py-4 bg-slate-50 border-t border-slate-200 flex flex-col sm:flex-row items-center justify-between gap-4">
        <div class="text-xs text-slate-500 font-medium">
          <%== @pagy.info_tag %>
        </div>
        
        <div class="flex items-center
                    [&_nav]:inline-flex [&_nav]:rounded-lg [&_nav]:shadow-sm [&_nav]:overflow-hidden [&_nav]:border [&_nav]:border-slate-300
                    [&_a]:px-4 [&_a]:py-2 [&_a]:text-sm [&_a]:font-bold [&_a]:text-slate-600 [&_a]:bg-white [&_a]:transition-colors [&_a]:no-underline
                    [&_a:hover]:bg-[#0066b3] [&_a:hover]:text-white
                    
                    [&_.current]:px-4 [&_.current]:py-2 [&_.current]:text-sm [&_.current]:font-bold [&_.current]:bg-[#0066b3] [&_.current]:text-white [&_.current]:relative
                    [&_.current]:after:content-[''] [&_.current]:after:absolute [&_.current]:after:bottom-0 [&_.current]:after:left-0 [&_.current]:after:w-full [&_.current]:after:h-[3.5px] [&_.current]:after:bg-orange-400
                    
                    [&_.disabled]:px-4 [&_.disabled]:py-2 [&_.disabled]:text-slate-300 [&_.disabled]:bg-slate-50 [&_.disabled]:cursor-not-allowed
                    [&_.gap]:px-4 [&_.gap]:py-2 [&_.gap]:text-slate-400 [&_.gap]:bg-slate-50">
          <%== @pagy.series_nav %>
        </div>
      </div>
    <% end %>

    <% if @orders.empty? %>
      <div class="px-6 py-16 text-center text-slate-400 italic text-sm">
        当前暂无已审核订单
      </div>
    <% end %>
  </div>
</div>
