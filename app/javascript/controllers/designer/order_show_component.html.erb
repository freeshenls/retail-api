<%# app/components/designer/order_show_component.html.erb %>
<div class="w-full max-w-4xl mx-auto space-y-4 pb-12 text-slate-700">

  <%# 顶部：单据标题与锁定金额展示 %>
  <div class="flex items-center justify-between border-b border-slate-100 pb-4">
    <div class="flex items-center gap-3">
      <div class="flex items-center justify-center w-9 h-9 bg-white border border-slate-200 rounded-xl text-slate-400 shadow-sm">
        <%= heroicon "lock-closed", variant: :outline, options: { class: "h-5 w-5" } %>
      </div>
      <div>
        <h2 class="text-lg font-black text-slate-900 tracking-tight">已提交订单详情</h2>
        <p class="text-[10px] text-slate-400 font-mono tracking-tighter uppercase">单号: <%= @order.order_no %></p>
      </div>
    </div>
    
    <%# 金额展示卡片 - 使用深灰色调表示锁定状态 %>
    <div class="px-5 py-2 bg-slate-800 rounded-xl shadow-lg">
      <div class="text-[9px] font-bold text-slate-500 uppercase tracking-widest text-right opacity-80">结算总金额</div>
      <div class="text-xl font-mono font-black text-white leading-none">
        <span class="text-xs mr-0.5 italic text-slate-400">¥</span>
        <span><%= number_with_precision(@order.amount, precision: 2) %></span>
      </div>
    </div>
  </div>

  <%# 第一区：存档稿件展示 %>
  <div class="bg-slate-50 border-2 border-dashed border-slate-200 rounded-2xl p-6 relative">
    <div class="flex flex-col items-center justify-center space-y-2 w-full h-full">
      <div class="w-10 h-10 rounded-full bg-white flex items-center justify-center text-slate-300 shadow-sm border border-slate-100">
        <%= heroicon "archive-box", variant: :outline, options: { class: "h-5 w-5" } %>
      </div>
      <div class="text-center">
        <span class="text-sm font-black text-slate-800 block">
          <%= @order.draft&.name || "未关联稿件" %>
        </span>
        <% if @order.draft&.file&.attached? %>
          <%= link_to rails_blob_path(@order.draft.file, disposition: "attachment"), 
                      class: "inline-flex items-center mt-2 px-3 py-1.5 bg-slate-200 hover:bg-slate-300 text-slate-700 text-[10px] font-bold rounded-lg transition-colors border border-slate-300 shadow-sm" do %>
            <%= heroicon "cloud-arrow-down", variant: :solid, options: { class: "h-3.5 w-3.5 mr-1 text-slate-500" } %>
            下载存档附件
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <%# 第二区：业务核心字段 %>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
    <div class="space-y-1">
      <label class="text-[10px] font-black text-slate-400 uppercase tracking-wider ml-1">结算客户</label>
      <div class="w-full px-4 py-2.5 bg-white border border-slate-200 rounded-xl text-sm font-bold text-slate-700 shadow-sm truncate">
        <%= @order.customer_name %>
      </div>
    </div>

    <div class="space-y-1">
      <label class="text-[10px] font-black text-slate-400 uppercase tracking-wider ml-1">服务项目</label>
      <div class="w-full px-4 py-2.5 bg-white border border-slate-200 rounded-xl text-sm font-bold text-slate-700 shadow-sm">
        <%= @order.service_type %>
      </div>
    </div>

    <div class="space-y-1">
      <label class="text-[10px] font-black text-slate-400 uppercase tracking-wider ml-1">规格/幅面</label>
      <div class="w-full px-4 py-2.5 bg-white border border-slate-200 rounded-xl text-sm font-bold text-slate-700 shadow-sm">
        <%= @order.category_name %>
      </div>
    </div>
  </div>

  <%# 第三区：财务/数量明细 %>
  <div class="bg-white border border-slate-200 rounded-2xl shadow-sm overflow-hidden p-5 grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="space-y-1">
      <label class="text-[10px] font-black text-slate-400 uppercase ml-1">订单数量</label>
      <div class="w-full px-4 py-2.5 bg-slate-50 rounded-xl font-mono font-bold text-slate-900 border border-slate-100">
        <%= @order.quantity %>
      </div>
    </div>

    <div class="space-y-1">
      <label class="text-[10px] font-black text-slate-400 uppercase ml-1">执行单价</label>
      <div class="w-full px-4 py-2.5 bg-slate-50 rounded-xl font-mono font-bold text-slate-900 border border-slate-100">
        <span class="text-xs mr-0.5 text-slate-400 font-normal italic">¥</span><%= number_with_precision(@order.unit_price, precision: 4) %>
      </div>
    </div>

    <div class="space-y-1">
      <label class="text-[10px] font-black text-slate-400 uppercase ml-1">结算方式</label>
      <div class="w-full flex items-center justify-between px-4 py-2.5 bg-slate-50 rounded-xl text-xs font-bold text-slate-700 border border-slate-100">
        <span><%= @order.payment_method %></span>
        <%= heroicon "credit-card", variant: :mini, options: { class: "h-4 w-4 text-slate-300" } %>
      </div>
    </div>
    
    <div class="space-y-1">
      <label class="text-[10px] font-black text-slate-400 uppercase ml-1">运费/额外支出</label>
      <div class="w-full px-4 py-2.5 bg-slate-50 rounded-xl font-mono text-sm text-slate-600 border border-slate-100">
        <%= number_with_precision(@order.delivery_fee, precision: 2) %>
      </div>
    </div>

    <div class="md:col-span-2 space-y-1">
      <label class="text-[10px] font-black text-slate-400 uppercase ml-1">设计师备注</label>
      <div class="w-full px-4 py-2.5 bg-slate-50 rounded-xl text-xs text-slate-500 italic border border-slate-100 min-h-[42px]">
        <%= @order.remark.presence || "此订单无额外备注说明" %>
      </div>
    </div>
  </div>
</div>
