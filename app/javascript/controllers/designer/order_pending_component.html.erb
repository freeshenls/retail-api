<%# app/javascript/controllers/admin/invite_index_component.html.erb %>
<div class="space-y-6">
  <%# --- 生成区卡片保持不变 --- %>
  <div class="bg-white p-5 rounded-lg shadow-sm border border-slate-200">
    <%# ... 表单内容 ... %>
  </div>

  <%# --- 列表展示区 --- %>
  <div class="bg-white rounded-lg shadow-sm border border-slate-200 overflow-hidden">
    <div class="bg-slate-50/80 px-5 py-2.5 border-b border-slate-100 flex justify-between items-center">
       <span class="text-[10px] font-bold text-slate-500 uppercase tracking-widest">现有邀请码列表</span>
    </div>

    <table class="min-w-full">
      <%# ... 表格 Thead 和 Tbody 内容保持不变 ... %>
    </table>

    <%# --- 新增：Pagy 分页底栏 --- %>
    <% if @pagy.pages > 1 %>
      <div class="px-5 py-3 bg-slate-50 border-t border-slate-200 flex flex-col sm:flex-row items-center justify-between gap-4">
        
        <%# 左侧：分页信息 %>
        <div class="text-[10px] text-slate-500 font-bold uppercase tracking-tight">
          <%== @pagy.info_tag %>
        </div>
        
        <%# 右侧：Pagy 导航器 %>
        <div class="flex items-center
                    [&_nav]:inline-flex [&_nav]:rounded-md [&_nav]:shadow-sm [&_nav]:overflow-hidden [&_nav]:border [&_nav]:border-slate-300
                    [&_a]:px-3 [&_a]:py-1.5 [&_a]:text-[11px] [&_a]:font-bold [&_a]:text-slate-600 [&_a]:bg-white [&_a]:transition-colors [&_a]:no-underline
                    [&_a:hover]:bg-[#0066b3] [&_a:hover]:text-white
                    
                    [&_.current]:px-3 [&_.current]:py-1.5 [&_.current]:text-[11px] [&_.current]:font-bold [&_.current]:bg-[#0066b3] [&_.current]:text-white [&_.current]:relative
                    [&_.current]:after:content-[''] [&_.current]:after:absolute [&_.current]:after:bottom-0 [&_.current]:after:left-0 [&_.current]:after:w-full [&_.current]:after:h-[3px] [&_.current]:after:bg-orange-400
                    
                    [&_.disabled]:px-3 [&_.disabled]:py-1.5 [&_.disabled]:text-slate-300 [&_.disabled]:bg-slate-50 [&_.disabled]:cursor-not-allowed
                    [&_.gap]:px-3 [&_.gap]:py-1.5 [&_.gap]:text-slate-400 [&_.gap]:bg-slate-50">
          <%== @pagy.series_nav %>
        </div>
      </div>
    <% end %>

    <% if @invite_codes.empty? %>
      <div class="px-5 py-12 text-center text-slate-300 italic text-xs">
        当前暂无邀请码数据
      </div>
    <% end %>
  </div>
</div>
