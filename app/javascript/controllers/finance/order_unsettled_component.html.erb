<%# app/components/finance/order_unsettled_component.html.erb %>
<div data-controller="finance--order-unsettled-component" class="w-full space-y-4">
  <div class="bg-white border-2 border-slate-200 rounded-[2rem] shadow-sm overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-slate-200">
        <thead class="bg-slate-50/50">
          <tr>
            <th scope="col" class="px-8 py-5 text-left text-xs font-black text-slate-400 uppercase tracking-widest">订单编号</th>
            <th scope="col" class="px-6 py-5 text-left text-xs font-black text-slate-400 uppercase tracking-widest">规格/类型</th>
            <th scope="col" class="px-6 py-5 text-left text-xs font-black text-slate-400 uppercase tracking-widest">客户</th>
            <th scope="col" class="px-6 py-5 text-left text-xs font-black text-slate-400 uppercase tracking-widest">状态</th>
            <th scope="col" class="px-8 py-5 text-right text-xs font-black text-slate-400 uppercase tracking-widest">详情</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-100 bg-white text-slate-700">
          <% @orders.each do |order| %>
            <tr class="hover:bg-slate-50/50 transition-colors group">
              <td class="px-8 py-6 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="w-1.5 h-4 bg-[#0066b3] rounded-full mr-3 opacity-0 group-hover:opacity-100 transition-opacity"></div>
                  <span class="text-slate-900 font-mono font-bold text-sm tracking-tight"><%= order.order_no %></span>
                </div>
              </td>

              <td class="px-6 py-6 whitespace-nowrap">
                <div class="text-sm font-black text-slate-700"><%= order.category_name %></div>
                <div class="mt-1 flex items-center gap-2">
                  <span class="inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-bold bg-slate-100 text-slate-500 border border-slate-200 uppercase">
                    <%= order.service_type %>
                  </span>
                  <span class="text-[10px] font-bold text-slate-400">× <%= order.quantity.to_i %></span>
                </div>
              </td>

              <td class="px-6 py-6 whitespace-nowrap text-xs font-bold text-slate-500 uppercase tracking-tighter">
                <%= order.customer_name %>
              </td>

              <td class="px-6 py-6 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-1 rounded-full text-[10px] font-black bg-amber-50 text-amber-600 border border-amber-100 shadow-sm">
                  <span class="w-1.5 h-1.5 bg-amber-400 rounded-full mr-1.5"></span>
                  <%= order.status == "checked" ? "已核实 / " : "" %>待结算
                </span>
              </td>

              <td class="px-8 py-6 whitespace-nowrap text-right">
                <%= link_to "查看", finance_order_path(order), 
                            data: { turbo: false },
                            class: "text-[#0066b3] hover:text-[#005596] font-black text-sm transition-colors" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= render Common::PagyComponent.new(pagy: @pagy) %>
  </div>
</div>
