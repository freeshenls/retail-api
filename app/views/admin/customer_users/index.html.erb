<%# app/views/admin/customer_users/index.html.erb %>
<%= render layout: "admin/layout" do %>
  <div data-controller="layout--tab-init" 
       data-layout--tab-init-label-value="关系维护" 
       data-layout--tab-init-path-value="<%= request.path %>">
  <%# 这里的代码会注入到 layout 的 yield 位置，也就是 main_content 内部 %>
    <%= render Admin::CustomerUsersIndexComponent.new(
        customers: @customers, 
        selected_customer: @selected_customer
      ) %>
  </div>
<% end %>
