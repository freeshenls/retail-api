<%# app/views/designer/orders/_approved_notification.html.erb %>
<div id="approved_notification_wrapper" class="relative" 
     data-controller="dropdown" 
     data-dropdown-active-class="animate-in fade-in slide-in-from-top-2 duration-200"
     data-dropdown-invisible-class="hidden">
  
  <%# 铃铛按钮 %>
  <button data-action="click->dropdown#toggle click@window->dropdown#hide" 
          class="cursor-pointer relative p-1.5 text-white/70 hover:text-white hover:bg-white/10 rounded-lg transition-all group block">
    <%= heroicon "bell", variant: :solid, options: { class: "h-6 w-6" } %>
    <% if count > 0 %>
      <span class="absolute top-1 right-1 flex h-4 w-4 items-center justify-center rounded-full bg-orange-400 text-[10px] font-bold text-white ring-2 ring-[#0066b3]">
        <%= count %>
      </span>
    <% end %>
  </button>

  <%# 下拉面板 %>
  <div id="approved_notifications_content" 
       data-dropdown-target="menu" 
       class="hidden absolute right-0 mt-3 z-50 w-80 bg-white rounded-lg shadow-[0_10px_30px_rgba(0,0,0,0.15)] border border-slate-200 overflow-visible transition-all">
    
    <div class="max-h-[420px] overflow-y-auto custom-scrollbar">
      <% if orders.any? %>
        <% orders.each do |order| %>
          <div id="approved_<%= dom_id(order) %>" 
               class="p-4 hover:bg-slate-50/50 border-b border-slate-100 last:border-none transition-all relative">
            
            <%# 订单基础信息 %>
            <div class="space-y-1.5 mb-3">
              <div class="flex items-center gap-2 text-[11px] font-black text-slate-400">
                <div class="w-1 h-3 bg-[#0066b3] rounded-full"></div>
                <span>订单：<%= order.order_no %></span>
              </div>
              <p class="text-[13px] font-bold text-slate-800 truncate pl-3.5"><%= order.draft&.name %></p>
              <div class="pl-3.5 flex items-center justify-between text-[11px]">
                <span class="font-black text-[#0066b3] italic font-mono text-[13px]">¥ <%= number_with_precision(order.amount, precision: 2) %></span>
                <span class="font-bold text-slate-300 uppercase tracking-tighter"><%= order.customer_name %></span>
              </div>
            </div>

            <%# 按钮与 Hover 气泡区 %>
            <div class="flex justify-end gap-2 items-center relative">
              <%= link_to designer_order_path(order), data: { turbo: false }, 
                          class: "px-2 py-1 text-slate-400 hover:text-slate-900 text-[11px] font-bold cursor-pointer transition-colors" do %>
                详情
              <% end %>

              <%# Hover 容器：鼠标悬停在这一块时，气泡显示 %>
              <div class="relative group/popover">
                <button type="button" 
                        class="px-3 py-1 text-[#0066b3] bg-[#0066b3]/5 group-hover/popover:bg-[#0066b3]/10 text-[11px] font-black rounded transition-all cursor-pointer">
                  确认收货
                </button>

                <%# 真正的 Popover 气泡：利用 group-hover 控制显示 %>
                <div class="invisible opacity-0 group-hover/popover:visible group-hover/popover:opacity-100 
                            absolute bottom-full right-0 mb-2 z-[60] transition-all duration-200 
                            translate-y-1 group-hover/popover:translate-y-0">
                  
                  <div class="bg-white border border-slate-200 shadow-xl rounded-lg p-1.5 flex items-center gap-1.5 whitespace-nowrap">
                    <%# 确认按钮：直接执行，无需点击气泡内的取消 %>
                    <%= button_to designer_order_path(order), 
                                  method: :patch,
                                  params: { biz_order: { is_settled: true } },
                                  class: "flex items-center gap-1.5 px-4 py-1.5 bg-[#0066b3] text-white text-[11px] font-black rounded shadow-sm hover:bg-[#005596] cursor-pointer border-none transition-all" do %>
                      <%= heroicon "check", variant: :mini, options: { class: "h-4 w-4" } %>
                      点击确定结算
                    <% end %>
                    
                    <%# 气泡三角箭头 %>
                    <div class="absolute top-[calc(100%-5px)] right-6 w-2.5 h-2.5 bg-white border-r border-b border-slate-200 rotate-45"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="py-12 text-center text-[11px] font-bold text-slate-300 uppercase tracking-widest">暂无待处理订单</div>
      <% end %>
    </div>
  </div>
</div>
